<div>
    <label>User</label>
    <select name="user">
        <% users.forEach(user => { %>
            <% if (user.id.toString() === reservation.user?.toString()) { %>    
                <option selected value="<%= user.id %>"><%= user.name %></option>
            <% } else { %>
                <option value="<%= user.id %>"><%= user.name %></option>
            <% } %>
        <% }) %>
    </select>
</div>

<div>
    <label>Game</label>
    <select id="game" name="game" required>
        <% games.forEach(game => { %>
            <option value="<%= game.id %>"><%= game.date.toDateString() %> vs <%= game.opponent %> at <%= game.time %></option>
        <% }) %>   
    </select>
</div>

<div>
    <label>Car Make</label>
    <input type="text" name="carMake" value="<%= reservation.carMake %>">
</div>
<div>
    <label>Car Model</label>
    <input type="text" name="carModel" value="<%= reservation.carModel %>">
</div>
